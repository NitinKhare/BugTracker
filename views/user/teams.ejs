<%- include  ../partials/header %>

<style>
        .assigned { background-color: rgb(250, 202, 114); }
        .not-assigned { background-color: rgb(54, 211, 216); }        
</style>


<div class="container">
    <header class="jumbotron">
        <div class="container">
                <h1>TEAM  INFO</h1>

                <h3>For Information on all registered users go <a href="/users">here</a></h3>

            <p>
                <a class="btn btn-primary btn-lg" href="/createteam">Create a new Team</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12 col-centered">
 
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Team Name</th>
                        <th>Date Created</th>
                        <th>Work Assigned</th>
                        <th>Members</th> 
                    </tr>
                </thead>
                
                <tbody>    
                    <% var cls = "";%>
                        <% teams.forEach(function(teams){ %>
                            <% if (teams.workAssigned === "NO"){ %>
                                <% cls = "not-assigned"; %>
                                <% } %>
                                <% if (teams.workAssigned === "YES"){ %>
                                <% cls = "assigned"; %>
                                <% } %>
                        <tr class = "<%= cls %>">
                            <td><%= teams.id %></td>

                           
                        <td ><a style="text-decoration:none; color : #000;" href="/"><%= teams.teamName %></a></td>

                        <td><%= teams.dateCreated %></td>

                        <td><a style="text-decoration:none; color : rgb(41, 29, 29);" href="/teams/<%= teams._id %>"><%= teams.workAssigned %></a></td>

                        <td><a style="text-decoration:none; color : #000;" href="/teams/<%= teams._id %>"><%= teams.users.length %></a></td>

                        
                        
                    </tr>
             
       
                    <% }); %>
                </tbody>
            </table>
       
    </div>

    </div>
</div>
<%- include  ../partials/footer %>